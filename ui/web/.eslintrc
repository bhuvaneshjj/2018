{
  "env": {
    "es6": true,
    "jasmine": true,
    "jest": true
  },

  "plugins": ["jasmine", "react", "react-hooks"],

  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaVersion": 2019,
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true
    }
  },

  "extends": [
    "eslint:recommended",
    "airbnb",
    "plugin:jasmine/recommended",
    "plugin:react/recommended"
  ],

  "settings": {
    "react": {
      "version": "16.12"
    },
    "import/resolver": {
      "alias": {
        "map": [["ui-common", "../mobile/src/ui-common"]]
      }
    }
  },

  "globals": {
    "document": true,
    "fetch": true,
    "localStorage": true,
    "URL": true,
    "WebSocket": true,
    "window": true
  },

  "rules": {
    // Integrate with prettier.
    "arrow-parens": ["error", "as-needed"],
    "comma-dangle": ["error", "never"],
    "function-paren-newline": 0,
    "implicit-arrow-linebreak": 0,
    "no-confusing-arrow": 0,
    "no-nested-ternary": 0,
    "object-curly-newline": ["error", { "consistent": true }],
    "operator-linebreak": 0,
    "react/jsx-one-expression-per-line": 0,
    "react/jsx-wrap-multilines": ["error", { "declaration": false, "assignment": false }],

    // It is perfectly ok to explicitly export only one thing from a module.
    "import/prefer-default-export": 0,

    // Do not force new lines before expect. Does not work correctly with 'await'.
    "jasmine/new-line-before-expect": 0,

    // These rules are too strict or do not work with my setup.
    "jsx-a11y/label-has-associated-control": [
      "error",
      {
        "labelComponents": [],
        "labelAttributes": [],
        "controlComponents": [],
        "assert": "either",
        "depth": 25
      }
    ],
    "jsx-a11y/no-autofocus": 0,
    "react/destructuring-assignment": ["error", "always", { "ignoreClassFields": true }],
    "react/jsx-boolean-value": ["error", "always"],
    "react/jsx-props-no-spreading": 0,
    "react/state-in-constructor": ["error", "never"],

    // Enable these rules from react-hooks.
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}
