{
  env: {
    es6: true,
    jest: true,
    node: true,
  },

  plugins: [ 'react' ],

  parser: 'babel-eslint',

  parserOptions: {
    ecmaVersion: 2017,
    ecmaFeatures: {
      jsx: true
    }
  },

  extends: [ 'eslint:recommended', 'airbnb-base', 'plugin:react/recommended' ],

  globals: {
    document: true,
    localStorage: true,
    WebSocket: true,
    window: true
  },

  rules: {
    // Integrate with prettier.
    'arrow-parens': ['error', 'as-needed'],
    'comma-dangle': ['error', 'never'],
    'function-paren-newline': 0,
    'indent': ['error', 2, { 'SwitchCase': 1 }],
    'object-curly-newline': ['error', { 'consistent': true }],

    // Do not warn about: 'use strict' is unnecessary inside of modules.
    // NodeJS does not support ES6 modules with import/export, yet.
    'strict': 0
  }
}
