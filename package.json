{
  "name": "jcm2018",
  "version": "0.9.0",
  "description": "Jirkovsk√Ω crossmarathon",
  "keywords": [],
  "author": "Ivo Raisr",
  "email": "ivosh@ivosh.net",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ivosh/jcm2018.git"
  },
  "engines": {
    "node": "9.x"
  },
  "cacheDirectories": [
    "node_modules",
    "ui/node_modules"
  ],
  "scripts": {
    "start": "node server/server.js",
    "test:server": "NODE_ENV=test LOG_LEVEL=error jest --env=node --runInBand common/ server/",
    "test": "npm run test:server -- && cd ui/ && npm test && cd ..",
    "prettier:server": "prettier --write '{common,server}/**/*.js'",
    "prettier": "npm run prettier:server && cd ui/ && npm run prettier && cd ..",
    "lint:server": "eslint common server",
    "lint": "npm run lint:server; cd ui/ && npm run lint",
    "coverage": "NODE_ENV=test LOG_LEVEL=error jest --env=node --runInBand --coverage common/ server/ && cd ui/ && npm run coverage && cd ..",
    "coverage:report": "npm run coverage && codecov",
    "clean": "rm -rf coverage && cd ui/ && npm run clean && cd ..",
    "clobber": "rm -rf coverage node_modules && cd ui/ && npm run clobber && cd ..",
    "heroku-postbuild": "cd ui/ && npm install && npm install --only=dev --no-shrinkwrap && npm run build && cd .."
  },
  "dependencies": {
    "@newrelic/native-metrics": "^2.1.2",
    "async-file": "^2.0.2",
    "bcrypt": "^1.0.3",
    "heroku-logger": "^0.3.0",
    "jsonwebtoken": "^8.1.0",
    "mongoose": "^4.13.8",
    "mongoose-unique-array": "^0.2.0",
    "newrelic": "^2.7.0",
    "node": "^9.4.0",
    "websocket": "^1.0.25",
    "websocket-as-promised": "^0.6.0",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "5to6-codemod": "^1.7.1",
    "babel-eslint": "^8.1.2",
    "codecov": "^3.0.0",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jasmine": "^2.9.1",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^21.2.1",
    "jscodeshift": "^0.4.0",
    "prettier": "^1.9.2",
    "supertest": "^3.0.0"
  },
  "jest": {
    "coverageDirectory": "./coverage/"
  }
}
